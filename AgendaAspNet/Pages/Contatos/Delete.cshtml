@page
@model AgendaAspNet.Pages.Contatos.DeleteModel

@{
    ViewData["Title"] = "Excluir contato";
}

<h1>@ViewData["Title"]</h1>

<h3><font color="#ff0000">Tem certeza que deseja excluir esse contato?</font></h3>
<div>
    <h4>Contato</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Contato.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contato.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Contato.Telefone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contato.Telefone)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Contato.Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> 
        <a class="btn btn-info" asp-page="./Index">Voltar</a>
    </form>
</div>
